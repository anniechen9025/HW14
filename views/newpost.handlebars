<div>
  <div class="card-header">
    <h3>New Post</h3>
  </div>
  <form class="card-body" id="new-post">
    <div class="form-group">
      <label for="post-title">Title:</label>
      </br>
      <input type="text" class="form-input" name="post-title" id="post-title" />
    </div>
    <div class="form-group">
      <label for="post-description">Description:</label>
      </br>
      <textarea name="post-body" id="post-body" cols="30" rows="10" class="form-input"></textarea>
    </div>
    <div class="form-group">
      <button class="btn btn-secondary" type="submit" id="post-btn">Submit</button>
    </div>
  </form>
</div>
<script src="./js/addpost.js"></script>